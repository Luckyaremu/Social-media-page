<section class="user-section">
  <div>
  <h2 class="inline"><%= "Name: #{@user.name}" %></h2>
          <% if !(@current_user.id == @user.id) %>
            <% count = @user.mutual_friends(@current_user, @user) %>
            <p class="mutual"> Mutual friends : <%= count %></p>
            <% if (request_friendship(@current_user.id, @user.id)) == 2 %>
              <h4 class="accept">
                <%= link_to 'Accept request', send_friendship_user_path(:id => @user.id) %>
              </h4>
              <h4 class="reject"> 
                <%= link_to 'Reject request', reject_user_path(:id => @user.id) %>
              </h4>
            <% elsif (request_friendship(@current_user.id, @user.id)) == 1 %>
              <%= link_to 'Unfriend', send_friendship_user_path(:id => @user.id), class: "link"%>
            <% elsif (request_friendship(@current_user.id, @user.id)) == 3 %>
              <%= link_to 'Cancel Request', send_friendship_user_path(:id => @user.id), class: "link"%>
            <% elsif (request_friendship(@current_user.id, @user.id)) == 4 %>
              <%= link_to 'Request Friendship', send_friendship_user_path(:id => @user.id), class: "link"%>
            <% end %>
          <% end %>
          </div>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>